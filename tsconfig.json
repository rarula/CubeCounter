{
    "compilerOptions": {
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "esModuleInterop": true,
        "module": "esnext",
        "target": "esnext",
        "resolveJsonModule": true,
        "moduleResolution": "bundler",
        "isolatedModules": true,
        "jsx": "react-jsx",
        "baseUrl": ".",
        "outDir": "./dist",
        "sourceMap": true
    },
    "include": ["src"],
    "exclude": ["node_modules"],
    "ts-node": {
        "compilerOptions": {
            "module": "commonjs"
        }
    }
}
